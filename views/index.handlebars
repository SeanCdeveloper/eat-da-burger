<div class="jumbotron">
    <h1>Eat-Da-Burger</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h2>Burgers to Devour</h2>
            {{#each burgers}}
                {{#unless this.devoured}}
                    <form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
                        <div class="form-group">
                            <ul>
                                <li>
                                    <button type="submit" name="devoured" value="1" class="btn">
                                        {{burger_name}}
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </form>
                {{/unless}}
            {{/each}}
        </div>
        <div class="col-lg-4">
            <div class="text-center">
                <img class="mb-2" src="assets/img/burger.jpg">
            </div>
            <form action="/burgers/create" method="POST">
                <div class="form-group">
                    <input type="text" name="burger_name" class="form-control" placeholder="Enter Burger Name">
                    <button class="btn btn-primary my-2" type="submit">Add Burger</button>
                </div>
            </form>
        </div>
        <div class="col-lg-4">
            <h2>Burgers Devoured</h2>
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li>
                            <button disabled class="btn mx-1 my-1">
                                {{burger_name}}
                            </button>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>